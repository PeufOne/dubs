{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "rootDirs": ["./src", "../types"],
    "baseUrl": ".",
    "paths": {
      "types": ["../types"],
      "$public/*": ["./public/*"],
      "$src/*": ["./src/*"],
      "$lib/*": ["./src/lib/*"],
      "$layouts/*": ["./src/layouts/*"],
      "$pages/*": ["./src/pages/*"],
      "$material/*": ["./src/material/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
