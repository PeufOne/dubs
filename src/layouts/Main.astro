---
import '@fontsource/comic-neue'
import logo from '$public/img/logo-borderless.png'
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/png' href='/img/logo-256.png' />
    <meta name='generator' content={Astro.generator} />
    <title>Dubs apiculture</title>
  </head>
  <body>
    <!-- <Header /> -->
    <main class='min-h-screen w-screen bg-primary-light overflow-x-hidden'>
      <img
        src={logo}
        alt='Logo dubs-apiculture'
        class='absolute top-1/2 -left-1/4 rotate-12 max-h-[75%] -translate-y-1/2 opacity-20'
      />
      <slot />
    </main>
  </body>
</html>
