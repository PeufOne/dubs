{
  "compilerOptions": {
    "rootDirs": ["./src", "../types", "../common"],
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "types": ["../types"],
      "common": ["../common"]
    },
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react"
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"],
  "ts-node": {
    "transpileOnly": true
  }
}
