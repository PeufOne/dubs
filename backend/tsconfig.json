{
  "compilerOptions": {
    "rootDirs": ["./src", "../types", "../common"],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "jsx": "react",
    "paths": {
      "types": ["../types"],
      "common": ["../common"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
